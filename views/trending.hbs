<br><br>
<div class="container">
    <h4>Trending posts ... </h4>
    <hr>
    <div class="row">
        {{#each posts}}
        {{#if this.imageUrl}}
        <div class="col-sm-3 mb-3 d-flex align-items-stretch">
            <div class="card">
                
                <img class="card-img-top img-fluid" style="height: 150px; width: 100%;" src="{{this.imageUrl}}" alt="some image">
                
                <div class="card-block">
                    <h6 class="card-title ml-2 mt-1">{{this.name}}</h6>
                    <div style="height: 50px;">
                    <p class="card-text ml-2">{{this.post}}</p>
                    </div>
                    
                    <div class="card-footer" style="position: relative;">
                      <small class="text-muted">{{this.likedBy.length}}<i> Likes</i></small>
                    </div>
                </div>
            </div>
        </div>
        {{/if}} 
        {{/each}}
    </div>
</div>
<link rel="stylesheet" href="/css/trending.css">